@page "/"

@inject QuizAuthStateProvider quiz
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<SectionContent SectionName="pageTitle">Home</SectionContent>

<h1>Hello @quiz.User?.Name</h1>

<AuthorizeView>
    <Authorizing>
        <p>Authorizing....</p>
    </Authorizing>
    <NotAuthorized><p>Not authorized..!!</p></NotAuthorized>
    <Authorized>
        <p>You are an authorized user: @context.User.Claims.FirstOrDefault(n => n.Type == ClaimTypes.Name)?.Value</p>
    </Authorized>
</AuthorizeView>

